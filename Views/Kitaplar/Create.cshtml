@model MvcKitapProjesi1.Models.Kitaplar

@{
    ViewBag.Title = "Yeni Kitap Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow p-4 bg-light">
                <h3 class="card-title text-center mb-4">📚 Yeni Kitap Ekle</h3>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()// güvenlik için formun kim tarafından gönderildiğini doğrular 

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.KitapAdi) @*Kullanıcıya Kitap Adı: gibi yazı gösterir *@
                @Html.EditorFor(model => model.KitapAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KitapAdi, "", new { @class = "text-danger" })
            </div>

                    <div class="form-group mb-3">
                        @Html.Label("Yazar")
                        @Html.DropDownList("YazarID", (IEnumerable<SelectListItem>)ViewBag.YazarID, "Yazar Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.YazarID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.Label("Tür")
                        @Html.DropDownList("TurID", (IEnumerable<SelectListItem>)ViewBag.TurID, "Tür Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TurID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.BasimTarihi)
                        @Html.TextBoxFor(model => model.BasimTarihi, new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.BasimTarihi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-4">
                        @Html.Label("Durumlar")
                        @Html.DropDownList("DurumID", (IEnumerable<SelectListItem>)ViewBag.DurumID, "Durum Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DurumID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-end">
                        <input type="submit" value="📘 Kaydet" class="btn btn-success me-2" />
                        @Html.ActionLink("⬅ Listeye Dön", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
