@model IEnumerable<MvcKitapProjesi1.Models.Kitaplar>

@{
    ViewBag.Title = "Kitapları Gör";
}

<h2>Kitapları Gör</h2>

<p>
    @Html.ActionLink("Yeni Kitap Ekle", "Create", null, new { @class = "btn btn-warning" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kitap ID</th>
            <th>Kitap Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KitapID</td>
                <td>@item.KitapAdi</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.KitapID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.KitapID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
